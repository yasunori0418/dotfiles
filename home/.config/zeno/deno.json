{
  "$schema": "https://raw.githubusercontent.com/denoland/deno/refs/heads/main/cli/schemas/config-file.v1.json",
  "compilerOptions": {
    "lib": [
      "deno.window"
    ],
    "strict": true
  },
  "test": {
    "permissions": {
      "read": true,
      "write": true,
      "env": true,
      "run": true
    },
    "include": [
      "./src/debug.ts",
      "./src/*.test.ts"
    ]
  },
  "tasks": {
    "test": "deno test -P"
  },
  "imports": {
    "@std/expect": "jsr:@std/expect@^1.0.17",
    "@std/testing": "jsr:@std/testing@^1.0.16",
    "@yuki-yano/zeno": "jsr:@yuki-yano/zeno@^0.2.0"
  }
}
