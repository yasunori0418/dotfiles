{
  "$schema": "https://raw.githubusercontent.com/denoland/deno/refs/heads/main/cli/schemas/config-file.v1.json",
  "compilerOptions": {
    "lib": [
      "deno.window"
    ],
    "strict": true
  },
  "test": {
    "permissions": {
      "read": true,
      "write": true,
      "env": true,
      "run": true
    },
    "include": [
      "./src/debug.ts",
      "./src/*.test.ts"
    ]
  },
  "lint": {
    "rules": {
      "exclude": ["no-import-prefix"]
    }
  },
  "tasks": {
    "test": "deno test -P",
    "test:watch": "deno test -P --watch"
  },
  "imports": {
    "@david/dax": "jsr:@david/dax@^0.45.0",
    "@praha/byethrow": "npm:@praha/byethrow@^0.9.0",
    "@remeda/remeda": "jsr:@remeda/remeda@^2.32.0",
    "@std/expect": "jsr:@std/expect@^1.0.17",
    "@std/fs": "jsr:@std/fs@^1.0.19",
    "@std/path": "jsr:@std/path@^1.1.2",
    "@std/testing": "jsr:@std/testing@^1.0.16",
    "@yuki-yano/zeno": "jsr:@yuki-yano/zeno@^0.2.0"
  }
}
